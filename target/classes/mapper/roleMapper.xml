<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="sodb.role" >

	<!-- 根据roleID查询一个角色名-->
    <select id="search_roleName_info" parameterType="java.util.Map" resultType="string" >
        SELECT ROLE_NAME as roleName
        FROM sys_role
        WHERE role_id = #{roleId} 
    </select>
    
    <!-- 根据roleID查询多个角色名-->
    <select id="search_all_roleName_info" parameterType="java.util.List" resultType="java.lang.String" >
        SELECT ROLE_NAME as roleName
        FROM sys_role
        WHERE role_id in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">  
            #{item}   
    	</foreach>
    </select>
</mapper>